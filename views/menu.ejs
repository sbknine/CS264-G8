<style>
    body {
    margin: 0;
    padding: 0;
    font-family: 'Kanit', sans-serif;
}
 /* แถบบน */
.menubar {
    width: 100%;
    height: 163px;
    background: url(https://media.discordapp.net/attachments/778995764193919026/778995965927096340/bar4.jpg) no-repeat;
    background-size: cover;
    /* background-position: center center; */
    box-shadow: 0 0 10px #6666;
}
.container {
    width: 100%;
    margin: 0 auto;
}
.menubar .logo {
    float: left;
}
.menubar h1 {
    margin: 0;
    font-size: 24px;
    font-weight: normal;
    padding: 10px;
}
.container .menu {
    width: 100%;
    height: 45px;
    /* background :#17395C; */
    background :#E1DCC9;
    box-shadow: 0 0 10px #6666;
    margin: 0 auto;
    text-align: center;
}
.container ul.menu {
    list-style: none;
    float: left;
}
.container ul.menu li {
    padding: 10px;
    float: left;
    margin-right: 20px;
}
.container ul.menu li a {
    text-decoration: none;
    color: #070707;
    border-bottom: 2px solid transparent;
    padding-bottom: 20px;
    transition: all 0.3s ease;
}
.container ul.menu li a:hover {
    border-bottom: 2px solid #b33939;
    padding-bottom: 0;
}
.header {
    width: 100%;
}
.header_area {
    width: 660px;
    margin: 0 auto;
    text-align: center;
    color: #efb758;
}
.header_area h1 {
    margin: 0;
    text-align: center;
    font-size: 60px;
    font-weight: normal;
}
.info1_text p {
    margin: 30px;
    padding: 30px;
    /* text-align: center; */
    font-size: 20px;
    font-weight: normal;
}
.text_area{
    margin-left: 10%;
}
.info1_area {
    width: 100% cover;
    height: 500px;
    background-image: linear-gradient(150deg,#FFD13F,#C3002F);
}

.contact h1 {
    margin: 20px;
}
.contact p {
    margin: 20px;
}
.contact footer {
    width: 100% cover;
    height: 30px;
    background: #666666;
    text-align: center;
    padding: 15px;
}
.dropbtn {
  background-color: #E1DCC9;
  color: rgb(14, 13, 13);
  padding: 8.5px;
  font-size: 16px;
  border: none;
  cursor: pointer;
}
.dropdown {
  position: relative;
  display: inline-block;
}
.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}
.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}
.dropdown-content a:hover {
    background-color: #f1f1f1
}
.dropdown:hover .dropdown-content {
  display: block;
}
.dropdown:hover .dropbtn {
  background-color: #C3002F;
  color: #ffffff;
}
</style>
<body>

