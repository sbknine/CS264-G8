<h3 class="container">เอกสารคำร้อง</h3><br><br>

<script>
    function myFunction() {
      var txt;
      if (confirm("Press a button!")) {
        txt = "You pressed OK!";
      } else {
        txt = "You pressed Cancel!";
      }
      document.getElementById("demo").innerHTML = txt;
    }
</script>

<form class="container" form action="/next">
    <label for="object">เรื่อง </label>
    <input type="text" id="object" name="object"><br>
    <label for="sendto">เรียน </label>
    <input type="text" id="sendto" name="sendto"><br><br><br>
    <label>ข้าพเข้า</label>
    <select id="gender" name="gender">
        <option value="male">นาย</option>
        <option value="female">นางสาว</option>
        <option value="female2">นาง</option>
    </select>
    <input type="text" id="fname" name="fname"> 
    <input type="text" id="lname" name="lname">
    <label for="stuentid">เลขทะเบียน</label>
    <input type="text" id="stuentid" name="stuentid"> 
    <label for="years">ชั้นปีที่</label>
    <input class="smallbox" type="text" id="years" name="years"><br>
    <label for="faculty">สาขาวิชา</label>
    <input type="text" id="faculty" name="faculty">
    <label for="address">ที่อยู่ที่ติดต่อได้เลขที่</label>
    <input type="text" id="address" name="address">
    <label for="address">แขวง/ตำบล</label>
    <input type="text" id="address" name="address"><br>
    <label for="address">เขต/อำเภอ</label>
    <input type="text" id="address" name="address">
    <label for="contry">จังหวัด</label>
    <input type="text" id="contry" name="contry">
    <label for="number">โทรศัพท์ติดต่อนักศึกษา</label>
    <input type="text" id="number" name="number"><br>
